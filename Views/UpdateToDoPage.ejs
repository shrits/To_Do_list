<%- include("Partials/Header") %>
    <div class = "table-container">
        <h2 class = "todo-title"> Update Activity </h2>

        <div>
            <a class = "btn" href = "/"> Back </a>
            
            <form action = "/update-todo/<%= todo._id %>" method = "post">
                <div class = "Updated-ToDo">
                    <div class = "form-group">
                        <label for = "title" class = "text-light"> Activity </label>
                        <input type = "text" value ="<%= todo.title %>" id = "title" name = "title" placeholder = "Update Activity">
                    </div>

                    <div class = "form-group">
                        <label for = "description" class = "text-light"> Description </label>
                        <input type = "text" value ="<%= todo.description %>" id = "description" name = "description" placeholder = "Update Description">
                    </div>

                    <div class = "form-group">
                        <button type = "submit" class = "btn"> Save </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
<%- include("Partials/Footer") %>