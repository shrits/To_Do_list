<%- include("Partials/Header") %>
    <div class = "table-container">
        <h2 class = "todo-title">To Do List</h2>
        <div>
            <a class = "btn" href="/add-todo">Add Activity</a>
        </div>
        <br />

        <table id="todo-table">
                <tr>
                    <th>Activity</th>
                    <th>Description</th>
                    <th>Created at</th>
                    <th>Updated at</th>
                    <th>Actions</th>
                </tr>
                <tr>
                    <% for (let i = 0; i < todos.length; i++) { %>
                        <td> <%= todos[i].title %></td>
                        <td> <%= todos[i].description %></td>
                        <td> <%= time(todos[i].createdAt).format("MMM DD, YYYY, HH:mm")  %></td>
                        <td> <%= time(todos[i].updatedAt).format("MMM DD, YYYY, HH:mm")  %></td>
                        <td>
                            <a class = "btn" href="/update-todo?id=<%=todos[i]._id%>"> Edit </a>
                            <a class = "btn" href="/delete-todo?id=<%=todos[i]._id%>"> Delete </a>
                        </td>
                </tr>
                    <% } %>
        </table>
    </div>
<%- include("Partials/Footer") %>